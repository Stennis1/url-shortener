generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  name        String?
  provider    String
  providerId  String
  createdAt   DateTime @default(now())

  urls        Url[]
}

model Url {
  id          Int      @id @default(autoincrement())
  shortCode   String   @unique
  longUrl     String
  clickCount  Int      @default(0)
  createdAt   DateTime @default(now())
  expiresAt   DateTime?

  userId      Int?
  user        User?    @relation(fields: [userId], references: [id])

  @@index([shortCode])
  @@index([userId])
}
